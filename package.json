{
  "name": "banka_app_server",
  "version": "1.0.0",
  "description": "Server for the Banka App",
  "main": "index.js",
  "engines": {
    "node": "10"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc mocha server/test/*.test.js --timeout 20000 --exit",
    "test:watch": "mocha -w test/",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --exec babel-node",
    "start": "babel-node server/index.js",
    "lint": "eslint --fix",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "buildtable": "babel-node server/config/db.migration.js",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "author": "Chukwualuka Chiama",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-istanbul": "^5.2.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.7",
    "cross-env": "^5.2.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "faker": "^4.1.0",
    "mocha": "^6.2.3",
    "nodemon": "^1.19.3",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0"
  },
  "dependencies": {
    "@babel/cli": "^7.12.0",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.4.16",
    "pg": "^7.12.1",
    "snyk": "^1.518.0",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2"
  },
  "nodemonConfig": {
    "ignore": [
      "data/*.json"
    ]
  },
  "snyk": true
}
